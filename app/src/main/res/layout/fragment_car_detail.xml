<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CarDetailFragment">


    <ImageView
        android:id="@+id/iv_detail_image"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/car_front"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_detail_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/nanum"
        android:text="차량번호"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/iv_detail_image"
        app:layout_constraintTop_toBottomOf="@+id/iv_detail_image" />

    <TextView
        android:id="@+id/tv_detail_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="차량모델"
        android:textColor="#000000"
        android:textSize="20sp"
        android:fontFamily="@font/nanum"
        app:layout_constraintStart_toStartOf="@+id/tv_detail_number"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_number" />

    <TextView
        android:id="@+id/tv_detail_seater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="인승"
        android:textColor="#000000"
        android:textSize="20sp"
        android:fontFamily="@font/nanum"
        app:layout_constraintStart_toStartOf="@+id/tv_detail_model"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_model" />

    <TextView
        android:id="@+id/tv_detail_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="차량위치"
        android:textColor="#000000"
        android:textSize="20sp"
        android:fontFamily="@font/nanum"
        app:layout_constraintStart_toStartOf="@+id/tv_detail_seater"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_seater" />

    <TextView
        android:id="@+id/tv_detail_starttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="대여시작시간"
        android:textColor="#000000"
        android:textSize="20sp"
        android:fontFamily="@font/nanum"
        app:layout_constraintStart_toStartOf="@+id/tv_detail_location"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_location" />

    <TextView
        android:id="@+id/tv_detail_endtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="반납예정시간"
        android:fontFamily="@font/nanum"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/tv_detail_starttime"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_starttime" />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>